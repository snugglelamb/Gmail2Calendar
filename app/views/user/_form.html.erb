<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :account, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :account, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :psw, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :psw, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :json, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :json, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                user_path, :class => 'btn' %>
  </div>
<% end %>
