<%= form_for @event, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :shedule, :class => 'control-label' %>
    <div class="controls">
      <!-- <%= f.text_field :shedule, :class => 'text_field' %> -->
	  <%= f.datetime_select :shedule %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :location, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :location, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :mygmail_id, :class => 'control-label' %>
    <div class="controls">
	  <%= collection_select :events, :mygmail_id, Mygmail.all, :id, :eid%>
      <!-- <%= f.text_field :mygmail_id, :class => 'text_field' %> -->
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                events_path, :class => 'btn' %>
  </div>
<% end %>
